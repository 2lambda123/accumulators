{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "sourceMap": true,
    "lib": ["ESNext"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "jest.config.ts", "dist"]
}
